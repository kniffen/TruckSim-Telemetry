{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types"
    ],
    "noImplicitAny": true,
    "target": "ES2022",
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.test.ts"
  ],
  "exclude": [
    "node_modules"
  ],
}