  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types"
    ],
    "noImplicitAny": true,
    "skipLibCheck": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es5",
    "allowImportingTsExtensions": true
  },
  "include": [
    "ts-tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
}