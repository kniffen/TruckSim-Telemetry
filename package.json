  "author": "Kniffen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kniffen/TruckSim-Telemetry/issues"
  },
  "homepage": "https://kniffen.dev/TruckSim-Telemetry/",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.4",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.2",
    "eslint-plugin-jest": "^29.5.0",
    "jest": "^30.2.0",
    "node-gyp": "^12.1.0",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.6",
    "typedoc": "^0.28.15",
    "typedoc-github-theme": "^0.3.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  }
