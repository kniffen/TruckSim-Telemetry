  "gypfile": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kniffen/TruckSim-Telemetry.git"
  },
  "keywords": [
    "ats",
    "ets2",
    "scs",
    "trucksim",
    "telemetry",
    "game"
