{
  "name": "trucksim-telemetry",
  "version": "1.0.0",
  "description": "Telemetry data from the scs-sdk-plugin",
  "main": "dist/main.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "test": "npx jest",
    "test:watch": "npx jest --watch",
    "lint:fix": "npx eslint --fix .",
    "lint": "npx eslint .",
    "generate-docs": "npx typedoc",
